<%- include('header', {title: `Bird Sighting Notes #${id}`}); -%>

<div class="container" style="padding-top: 20px">
  <h1>Bird Sighting Notes #<% const number = Number(id) %><%= number %></h1>
  <br />

  <div>
    <div class="btn-group mr-2" role="group" aria-label="First group">
      <a class="btn btn-primary" href="/note/<%= id %>/edit" role="button"
        >Edit</a
      >
    </div>
    <div class="btn-group mr-2" role="group" aria-label="Second group">
      <form
        action="/note/<%= id %>?_method=DELETE"
        method="POST"
        onclick="return confirm('Are you sure you want to delete this item?');"
      >
        <button class="btn btn-danger" type="submit">Delete</button>
      </form>
    </div>
  </div>
  <br />
  <p>
    <span style="font-weight: bold">Date:</span>
    <span><%= date %></span>
  </p>
  <p>
    <span style="font-weight: bold">Duration:</span>
    <span><%= duration_mins %></span>
  </p>
  <p>
    <span style="font-weight: bold">Habitat:</span>
    <span><%= habitat %></span>
  </p>
  <p>
    <span style="font-weight: bold">Appearance:</span>
    <span><%= appearance %></span>
  </p>
  <p>
    <span style="font-weight: bold">Gender:</span>
    <br />
    <span><%= gender %></span>
  </p>
  <p>
    <span style="font-weight: bold">Vocalisations:</span>
    <br />
    <span><%= vocalisations %></span>
  </p>
  <p>
    <span style="font-weight: bold">Flock Size:</span>
    <br />
    <span><%= flock_size %></span>
  </p>
  <br />
  <!-- <p>
    <span style="font-weight: bold; font-size: small">Submitted on:</span>
    <br />
    <span style="font-size: small">/span>
  </p> -->
  <br />

  <a class="btn btn-secondary" href="/" role="button">Back</a>
</div>

<%- include('footer'); -%>
